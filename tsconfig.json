{
    "compilerOptions": {
        "target": "ES2017",
        "module": "CommonJS",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "strict": false,
        "outDir": "dist",
        "typeRoots": [
            "./src/types",
            "./node_modules/@types"
        ]
    },
    "include": [
        "prisma/**/*.ts",
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}